<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    android:orientation="horizontal"
    android:paddingVertical="@dimen/spacing_small"
    android:paddingHorizontal="@dimen/spacing_tiny">

    <ImageView
        android:id="@+id/iv_item_product_image"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_book"
        android:layout_marginEnd="@dimen/spacing_medium"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Tên sách rất dài để kiểm tra nhiều dòng"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/colorTextPrimary"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_item_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="150,000 đ"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorTextSecondary"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="x 2"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/colorTextPrimary"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/spacing_small"/>

</LinearLayout>
