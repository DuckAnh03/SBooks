<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".OrderDetailFragment">

    <!-- Header với back button -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Quay lại"
            app:tint="#1A1A1A" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chi tiết đơn hàng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:gravity="center"
            android:layout_marginEnd="40dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Trạng thái đơn hàng -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mã đơn hàng"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"/>

                        <TextView
                            android:id="@+id/tvOrderStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đang giao"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="#FF9800"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvOrderCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DH001"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF5722"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Ngày đặt:"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tvOrderDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="15/09/2025 - 14:30"
                            android:textSize="14sp"
                            android:textColor="#1A1A1A"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Dự kiến:"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tvExpectedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="20/09/2025"
                            android:textSize="14sp"
                            android:textColor="#1A1A1A"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tiến trình giao hàng -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiến trình giao hàng"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="16dp"/>

                    <!-- Timeline item 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginEnd="16dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#4CAF50"
                                android:layout_marginBottom="4dp"/>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="30dp"
                                android:background="#E0E0E0"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Đơn hàng đã được xác nhận"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="15/09/2025 - 14:35"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Timeline item 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginEnd="16dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#4CAF50"
                                android:layout_marginBottom="4dp"/>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="30dp"
                                android:background="#E0E0E0"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Đang chuẩn bị hàng"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="16/09/2025 - 09:00"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Timeline item 3 - Current -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginEnd="16dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#FF9800"
                                android:layout_marginBottom="4dp"/>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="30dp"
                                android:background="#E0E0E0"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Đang giao hàng"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FF9800"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="17/09/2025 - 08:30"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Timeline item 4 - Pending -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginEnd="16dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#E0E0E0"
                                android:layout_marginBottom="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Giao hàng thành công"
                                android:textSize="14sp"
                                android:textColor="#999999"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dự kiến: 20/09/2025"
                                android:textSize="12sp"
                                android:textColor="#999999"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Thông tin giao hàng -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông tin giao hàng"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_users"
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center_vertical"
                            app:tint="#666666" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvReceiverName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nguyễn Văn A"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"/>

                            <TextView
                                android:id="@+id/tvReceiverPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0123 456 789"
                                android:textSize="14sp"
                                android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="top"
                            android:layout_marginTop="2dp"
                            app:tint="#666666" />

                        <TextView
                            android:id="@+id/tvDeliveryAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="123 Đường ABC, Phường XYZ, Quận 1, TP. Hồ Chí Minh"
                            android:textSize="14sp"
                            android:textColor="#1A1A1A"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Danh sách sản phẩm -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm đã đặt"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="16dp"/>

                    <!-- Product 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="1dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_book_24"
                                android:scaleType="centerCrop"
                                android:background="#E8F5E8"
                                android:contentDescription="Bìa sách"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lập Trình Android từ Cơ bản đến Nâng cao"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tác giả: Nguyễn Văn A"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="8dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="120.000đ"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#FF5722"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="x1"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Product 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="1dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_book_24"
                                android:scaleType="centerCrop"
                                android:background="#E3F2FD"
                                android:contentDescription="Bìa sách"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kotlin Programming Complete Guide"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tác giả: Trần Thị B"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="8dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="130.000đ"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#FF5722"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="x1"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tổng kết thanh toán -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tổng kết thanh toán"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tạm tính:"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250.000đ"
                            android:textSize="14sp"
                            android:textColor="#1A1A1A"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí vận chuyển:"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Miễn phí"
                            android:textSize="14sp"
                            android:textColor="#4CAF50"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng cộng:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"/>

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250.000đ"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FF5722"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>