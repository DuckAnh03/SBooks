<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Header với filter và sort -->
    <LinearLayout
        android:id="@+id/filterHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Filter button -->
        <LinearLayout
            android:id="@+id/btnFilter"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_filter"
                android:layout_marginEnd="6dp"
                app:tint="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lọc"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- Sort button -->
        <LinearLayout
            android:id="@+id/btnSort"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_sort"
                android:layout_marginEnd="6dp"
                app:tint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sắp xếp"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Categories horizontal scroll -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/categorySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/filterHeader">

        <HorizontalScrollView
            android:id="@+id/categoryScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnMoreCategory"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <!-- Category chips -->
                <TextView
                    android:id="@+id/categoryAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tất cả"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="#FF5722"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/categoryProgramming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lập trình"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="#F0F0F0"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/categoryBusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kinh tế"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="#F0F0F0"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/categoryLiterature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Văn học"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="#F0F0F0"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/categoryScience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khoa học"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="#F0F0F0"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/categoryArt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nghệ thuật"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="#F0F0F0"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <ImageButton
            android:id="@+id/btnMoreCategory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Xem thêm danh mục"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="#000000" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Result count -->
    <LinearLayout
        android:id="@+id/resultInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/categorySection">

        <TextView
            android:id="@+id/txtResultCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hiển thị 24 cuốn sách"
            android:textSize="14sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <!-- Books list/grid -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/resultInfo"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/booksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Book item 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bookLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Book cover -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_book_24"
                            android:scaleType="centerCrop"
                            android:background="#E8F5E8"
                            android:contentDescription="Bìa sách"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Book info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lập Trình Android từ Cơ bản đến Nâng cao"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tác giả: Nguyễn Văn A"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"/>

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_star_rate"
                                app:tint="#FFB300" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(125 đánh giá)"
                                android:textSize="10sp"
                                android:textColor="#999999"/>
                        </LinearLayout>

                        <!-- Price and action -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="150.000đ"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="120.000đ"
                                    android:textColor="#FF5722"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Thêm vào giỏ"
                                android:textSize="12sp"
                                android:backgroundTint="#FF5722"
                                android:textColor="@android:color/white"
                                android:paddingHorizontal="16dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Book item 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Book cover -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_book_24"
                            android:scaleType="centerCrop"
                            android:background="#E3F2FD"
                            android:contentDescription="Bìa sách"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Book info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kotlin Programming Complete Guide"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tác giả: Trần Thị B"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"/>

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_star_rate"
                                app:tint="#FFB300" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.8"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(89 đánh giá)"
                                android:textSize="10sp"
                                android:textColor="#999999"/>
                        </LinearLayout>

                        <!-- Price and action -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="95.000đ"
                                    android:textColor="#FF5722"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Thêm vào giỏ"
                                android:textSize="12sp"
                                android:backgroundTint="#FF5722"
                                android:textColor="@android:color/white"
                                android:paddingHorizontal="16dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Book item 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Book cover -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_book_24"
                            android:scaleType="centerCrop"
                            android:background="#FFF3E0"
                            android:contentDescription="Bìa sách"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Book info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kinh Tế Học Vi Mô và Vĩ Mô"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tác giả: Lê Văn C"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"/>

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_star_rate"
                                app:tint="#FFB300" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.2"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(56 đánh giá)"
                                android:textSize="10sp"
                                android:textColor="#999999"/>
                        </LinearLayout>

                        <!-- Price and action -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="180.000đ"
                                    android:textColor="#FF5722"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Thêm vào giỏ"
                                android:textSize="12sp"
                                android:backgroundTint="#FF5722"
                                android:textColor="@android:color/white"
                                android:paddingHorizontal="16dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- RecyclerView để thay thế các item cứng -->
            <!--
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewBooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
            -->

        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button for quick actions -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_upward"
        android:contentDescription="Lên đầu trang"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="#FF5722"
        app:tint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>