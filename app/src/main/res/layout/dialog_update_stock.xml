<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_stock"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="@dimen/spacing_large" />

    <!-- Book Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/spacing_large">

        <ImageView
            android:id="@+id/iv_book_preview"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/bg_book_placeholder"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_book" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_book_title_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sách"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary" />

            <TextView
                android:id="@+id/tv_book_author_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:text="Tác giả"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorTextSecondary" />

            <TextView
                android:id="@+id/tv_current_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="Số lượng hiện tại: 50"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorInfo" />

        </LinearLayout>

    </LinearLayout>

    <!-- Stock Update Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số lượng mới"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Update Type Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loại cập nhật:"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="@dimen/spacing_small" />

    <RadioGroup
        android:id="@+id/rg_update_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_set_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đặt lại"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb_add_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm vào" />

        <RadioButton
            android:id="@+id/rb_subtract_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trừ đi" />

    </RadioGroup>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginEnd="@dimen/spacing_medium"
            style="@style/ButtonSecondary" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            style="@style/ButtonPrimary" />

    </LinearLayout>

</LinearLayout>