<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_tiny"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="2dp"
    android:foreground="@drawable/ripple_effect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_padding">

        <!-- Book Image -->
        <ImageView
            android:id="@+id/iv_book_image"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/bg_book_placeholder"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_book" />

        <!-- Book Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sách mẫu"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:text="Tác giả mẫu"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorTextSecondary" />

            <TextView
                android:id="@+id/tv_book_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:text="Thể loại"
                android:textSize="@dimen/text_size_tiny"
                android:textColor="@color/white"
                android:background="@drawable/bg_category_tag"
                android:paddingHorizontal="@dimen/spacing_small"
                android:paddingVertical="@dimen/spacing_tiny" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_book_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="250,000 VNĐ"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/tv_book_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SL: 50"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/colorSuccess" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_edit_book"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:layout_marginBottom="@dimen/spacing_small"
                android:background="@drawable/bg_button_icon"
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/edit" />

            <ImageButton
                android:id="@+id/btn_delete_book"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:background="@drawable/bg_button_icon_danger"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/delete" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>