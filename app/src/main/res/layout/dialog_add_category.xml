<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_category"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="@dimen/spacing_large" />

    <!-- Category Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/TextInputHint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/category_name"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Category Description Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/TextInputHint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_category_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/category_description"
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Category Icon Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biểu tượng danh mục"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="@dimen/spacing_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/spacing_large">

        <ImageView
            android:id="@+id/iv_category_icon_preview"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/bg_circle"
            android:src="@drawable/ic_category"
            android:padding="@dimen/spacing_small" />

        <Button
            android:id="@+id/btn_select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn biểu tượng"
            style="@style/ButtonSecondary" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginEnd="@dimen/spacing_medium"
            style="@style/ButtonSecondary" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            style="@style/ButtonPrimary" />

    </LinearLayout>

</LinearLayout>