<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_tiny"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="2dp"
    android:foreground="@drawable/ripple_effect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding">

        <!-- Order Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_small">

            <!-- Left: Order ID + Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#ORD001"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_tiny">

                    <TextView
                        android:id="@+id/tv_order_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15/09/2025 10:30"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/colorTextSecondary" />

                    <TextView
                        android:id="@+id/tv_priority_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ưu tiên"
                        android:textSize="@dimen/text_size_tiny"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_priority_high"
                        android:paddingHorizontal="@dimen/spacing_small"
                        android:paddingVertical="@dimen/spacing_tiny"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <!-- Right: Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chờ xử lý"
                    android:textSize="@dimen/text_size_tiny"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/bg_status_pending"
                    android:paddingHorizontal="@dimen/spacing_small"
                    android:paddingVertical="@dimen/spacing_tiny" />

            </LinearLayout>
        </LinearLayout>

        <!-- Customer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_small">

            <ImageView
                android:id="@+id/iv_customer_avatar"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:src="@drawable/ic_users"
                android:contentDescription="Avatar khách hàng"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/spacing_tiny"
                app:tint="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_small"
                android:text="Nguyễn Văn A"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/colorTextPrimary" />

            <TextView
                android:id="@+id/tv_customer_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123 456 789"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorTextSecondary" />

        </LinearLayout>

        <!-- Order Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <TextView
                android:id="@+id/tv_order_items"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 sản phẩm"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorTextSecondary" />

            <TextView
                android:id="@+id/tv_order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="450.000 ₫"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
