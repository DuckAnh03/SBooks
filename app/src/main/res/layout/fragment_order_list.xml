<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".OrderListFragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đơn hàng của tôi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"/>

        <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_filter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Lọc đơn hàng"
            app:tint="#666666" />
    </LinearLayout>

    <!-- Filter Tabs -->
    <HorizontalScrollView
        android:id="@+id/tabScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:scrollbars="none"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tất cả"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="#FF5722"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="12dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tabPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ xác nhận"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="#F0F0F0"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tabProcessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang giao"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="#F0F0F0"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tabCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàn tất"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="#F0F0F0"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tabCancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã hủy"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="#F0F0F0"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tabScrollView"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Đơn hàng 1 - Đang giao -->
            <androidx.cardview.widget.CardView
                android:id="@+id/orderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header đơn hàng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mã đơn: DH001"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đang giao"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="#FF9800"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Thông tin đơn hàng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày đặt: 15/09/2025"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_book_24"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 cuốn sách"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <!-- Giá và hành động -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng cộng"
                                android:textSize="12sp"
                                android:textColor="#666666"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="250.000đ"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#FF5722"/>
                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Theo dõi"
                            android:textSize="12sp"
                            android:backgroundTint="#FF5722"
                            android:textColor="@android:color/white"
                            android:paddingHorizontal="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Đơn hàng 2 - Hoàn tất -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header đơn hàng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mã đơn: DH002"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoàn tất"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="#4CAF50"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Thông tin đơn hàng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày đặt: 14/09/2025"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_book_24"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 cuốn sách"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <!-- Giá và hành động -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng cộng"
                                android:textSize="12sp"
                                android:textColor="#666666"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120.000đ"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#FF5722"/>
                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Đánh giá"
                            android:textSize="12sp"
                            android:backgroundTint="#4CAF50"
                            android:textColor="@android:color/white"
                            android:paddingHorizontal="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Đơn hàng 3 - Đã hủy -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header đơn hàng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mã đơn: DH003"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã hủy"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="#F44336"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Thông tin đơn hàng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày đặt: 10/09/2025"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_book_24"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 cuốn sách"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <!-- Giá và hành động -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng cộng"
                                android:textSize="12sp"
                                android:textColor="#666666"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300.000đ"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#999999"/>
                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Đặt lại"
                            android:textSize="12sp"
                            android:backgroundTint="#666666"
                            android:textColor="@android:color/white"
                            android:paddingHorizontal="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>