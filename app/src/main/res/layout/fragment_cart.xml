<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Danh sách sản phẩm -->
    <ScrollView
        android:id="@+id/scrollCart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footerCart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sản phẩm 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_book_24"
                    android:contentDescription="Book" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sách Lập trình Android"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120.000đ"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14sp" />

                    <!-- Khu vực số lượng + nút xóa -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical">

                        <Button
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="-"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:padding="0dp" />

                        <TextView
                            android:id="@+id/txtQuantity1"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="4dp" />

                        <Button
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="+"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:padding="0dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="12dp"
                            android:text="Xóa"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:paddingHorizontal="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- Sản phẩm  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_book_24"
                    android:contentDescription="Book" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sách Lập trình Android"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120.000đ"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14sp" />

                    <!-- Khu vực số lượng + nút xóa -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical">

                        <Button
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="-"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:padding="0dp" />

                        <TextView
                            android:id="@+id/txtQuantity2"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="4dp" />

                        <Button
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:text="+"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:padding="0dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="12dp"
                            android:text="Xóa"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:paddingHorizontal="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Footer giỏ hàng: Tổng tiền + Thanh toán -->
    <LinearLayout
        android:id="@+id/footerCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end"
        android:padding="12dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtTotalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tổng: 390.000đ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
